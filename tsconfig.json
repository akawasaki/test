{
  "compilerOptions": {
    "lib": ["es6", "es2017", "es2018", "es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
